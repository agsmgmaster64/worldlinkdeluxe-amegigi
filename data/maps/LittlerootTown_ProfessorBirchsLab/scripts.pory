const LITTLEROOT_STATE_NO_STARTER = 0
const LITTLEROOT_STATE_GOT_STARTER = 1
const LITTLEROOT_STATE_GOT_DEX = 3
const LITTLEROOT_STATE_GOT_MISC_STUFF = 4

const SHIORI_LAB_STATE_INTRO = 0
const SHIORI_LAB_STATE_GOT_STARTER = 1
const SHIORI_LAB_STATE_AKYUU_RETURN = 4
const SHIORI_LAB_STATE_GOT_DEX = 5

mapscripts LittlerootTown_ProfessorBirchsLab_MapScripts {
    MAP_SCRIPT_ON_TRANSITION {
		if (var(VAR_DEX_UPGRADE_JOHTO_STARTER_STATE) >= 6) {
			goto(LittlerootTown_ProfessorBirchsLab_EventScript_SetAfterJohtoStarterLayout)
		}
		if (var(VAR_DEX_UPGRADE_JOHTO_STARTER_STATE) >= 4) {
			goto(LittlerootTown_ProfessorBirchsLab_EventScript_SetJohtoStarterLayout)
		}
		if (var(VAR_DEX_UPGRADE_JOHTO_STARTER_STATE) == 3) {
			goto(LittlerootTown_ProfessorBirchsLab_EventScript_CheckReadyForJohtoStarter)
		}
    }
	MAP_SCRIPT_ON_WARP_INTO_MAP_TABLE [
		VAR_DEX_UPGRADE_JOHTO_STARTER_STATE, 1: LittlerootTown_ProfessorBirchsLab_EventScript_SetObjectPosForDexUpgrade
		VAR_DEX_UPGRADE_JOHTO_STARTER_STATE, 2: LittlerootTown_ProfessorBirchsLab_EventScript_SetObjectPosForDexUpgrade
		VAR_DEX_UPGRADE_JOHTO_STARTER_STATE, 3: LittlerootTown_ProfessorBirchsLab_EventScript_AddRivalObject
		VAR_DEX_UPGRADE_JOHTO_STARTER_STATE, 6: LittlerootTown_ProfessorBirchsLab_EventScript_AddRivalObject
		VAR_DEX_UPGRADE_JOHTO_STARTER_STATE, 4: LittlerootTown_ProfessorBirchsLab_EventScript_SetObjectPosForJohtoStarters
		VAR_DEX_UPGRADE_JOHTO_STARTER_STATE, 5: LittlerootTown_ProfessorBirchsLab_EventScript_SetObjectPosForJohtoStarters
	]
    MAP_SCRIPT_ON_FRAME_TABLE [
        VAR_BIRCH_LAB_STATE, SHIORI_LAB_STATE_INTRO {
			lockall
			applymovement(LOCALID_PLAYER, LittlerootTown_ProfessorBirchsLab_Movement_PlayerMoveToShiori)
			waitmovement(0)
			setspeakername(LittlerootTown_ProfessorBirchsLab_Text_Shiori)
			msgbox(format("{CREATE_MUGSHOT MUGSHOT_SHIORI EMOTE_NORMAL}Shiorin! It's me, Shiori Novella, one of the professors in Littleroot here.\p"
				"I heard you moved in from another region relatively nearby.\p"
				"Must be pretty nice to move into this little strange region that we call home here.\p"
				"Oh yeah, I mentioned myself being one of the professors here, did I?\p"
				"Well, that's because I have a partner called Akyuu who's usually with me.\p"
				"She happens to know a whole lot about what Puppets are and how they live, although she is a bit fragile.\p"
				"She's out in the field right now though, think around Route 103, I believe?\p"
				"Well, either way, I do have a whole briefcase of Puppets for you to choose one of.\p"
				"I figured you'd need it to be able to get my partner out in the field, and you seem to be missing a little partner anyways."))
			closemessage
			callnative(StartNewPokeballCaseUI)
			waitstate
			setspeakername(LittlerootTown_ProfessorBirchsLab_Text_Shiori)
			msgbox(format("{CREATE_MUGSHOT MUGSHOT_SHIORI EMOTE_NORMAL}Oh yeah, I should mention, this Puppet follows you around outside its Orb as well.\p"
				"It's pretty cute seeing the little Puppets follow their trainers around.\p"
				"You can even set which Puppet you want in the party if you have more than one.\p"
				"Speaking of, my partner Akyuu should have the Toho Orbs and Dex that have been brought just for you.\p"
				"Like I said, she should be around Route 103 over above Oldale Town if I recall.\p"
				"Tell her I, Shiori Novella, brought you to bring her back."))
			closemessage
			setvar(VAR_LITTLEROOT_TOWN_STATE, LITTLEROOT_STATE_GOT_STARTER)
			setvar(VAR_BIRCH_LAB_STATE, SHIORI_LAB_STATE_GOT_STARTER)
			releaseall
			end
		}
		VAR_BIRCH_LAB_STATE, SHIORI_LAB_STATE_AKYUU_RETURN {
			lockall
			applymovement(LOCALID_PLAYER, LittlerootTown_ProfessorBirchsLab_Movement_PlayerMoveToShiori)
			waitmovement(0)
			setspeakername(LittlerootTown_ProfessorBirchsLab_Text_Shiori)
			msgbox(format("WIP brought Akyuu back"))
			closemessage
			playfanfare(MUS_OBTAIN_ITEM)
			message(format("{PLAYER} received the iDollDex!"))
			waitfanfare
			setflag(FLAG_SYS_POKEDEX_GET)
			setflag(FLAG_SYS_NATIONAL_DEX)
			special(EnableNationalPokedex)
			special(SetUnlockedPokedexFlags)
			setflag(FLAG_RECEIVED_POKEDEX_FROM_BIRCH)
			setvar(VAR_CABLE_CLUB_TUTORIAL_STATE, 1)
			msgbox(format("WIP explain dex"))
			closemessage
			applymovement(LOCALID_BIRCHS_LAB_RALSEI, moves(
				walk_down
				walk_right * 3))
			waitmovement(0)
			applymovement(LOCALID_PLAYER, Common_Movement_WalkInPlaceFasterLeft)
			waitmovement(0)
			setspeakername(LittlerootTown_ProfessorBirchsLab_Text_Ralsei)
			msgbox(format("WIP Akyuu give Orbs"))
			closemessage
			giveitem(ITEM_TOHO_ORB, 5)
			setspeakername(LittlerootTown_ProfessorBirchsLab_Text_Ralsei)
			msgbox(format("WIP AKyuu eplain Orbs"))
			closemessage
			setvar(VAR_RESULT, 0)
			setvar(VAR_BIRCH_LAB_STATE, SHIORI_LAB_STATE_GOT_DEX)
			setflag(FLAG_ADVENTURE_STARTED)
			setvar(VAR_OLDALE_TOWN_STATE, 1)
			setvar(VAR_LITTLEROOT_TOWN_STATE, LITTLEROOT_STATE_GOT_DEX)
			setflag(FLAG_SYS_QUEST_MENU_GET)
			startquest(QUEST_IDOLLDEX)
			releaseall
			end
		}
		VAR_DEX_UPGRADE_JOHTO_STARTER_STATE, 1: LittlerootTown_ProfessorBirchsLab_EventScript_UpgradeToNationalDex
		VAR_DEX_UPGRADE_JOHTO_STARTER_STATE, 4: LittlerootTown_ProfessorBirchsLab_EventScript_ChooseJohtoStarter
    ]
}

script LittlerootTown_ProfessorBirchsLab_EventScript_Shiori {
	lock
	faceplayer
	if (var(VAR_BIRCH_LAB_STATE) == SHIORI_LAB_STATE_GOT_DEX) {
		msgbox(format("WIP Message Shiori have dex"))
		release
		end
	}
	msgbox(format("WIP Message Shiori get akyuu"))
	release
	end
}

script LittlerootTown_ProfessorBirchsLab_EventScript_Akyuu {
	lock
	faceplayer
	msgbox(format("WIP Message Akyuu"))
	release
	end
}

script LittlerootTown_ProfessorBirchsLab_EventScript_StarterBag {
	msgbox(format("It's the bag from where you got your starter from.\p"
		"Shiori definitely would see you getting another one."), MSGBOX_NPC)
	end
}

